{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/index.ts",
    "src/api/**/*",
    "src/services/**/*",
    "src/lib/**/*",
    "src/middleware/**/*",
    "src/config/**/*"
  ],
  "exclude": [
    "src/components",
    "src/screens",
    "src/__tests__",
    "src/tmp_*",
    "**/*.test.ts"
  ]
}